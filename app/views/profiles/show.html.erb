<div class="userprofile">

<div class="userprofile-profile-box">

  <div class="userprofile-profile_avatar">
    <% if @profile.profile_picture %>
      <%= cl_image_tag @profile.profile_picture.path, class: "avatar-XXlarge userprofile-profile-img" %>
    <% else %>
      <%= image_tag "avatar.png", class: "avatar-XXlarge userprofile-profile-img"   %>
    <% end %>
  </div>

  <div class="userprofile-interests">
    <h2><%= "#{@profile.first_name} #{@profile.last_name}" %></h2>

    <div class="row">
        <% @profile.user_interests.each do |interest| %>
          <div class="col-xs-4">
            <% interest_card = Interest.find(interest.interest_id) %>
              <div class="userprofile-interest">
                <%= image_tag(interest_card.icon_path, class: "userprofile-interest_icon") %>
                <%= interest_card.name %>
              </div>
            </div>
        <% end %>
    </div>
  </div>

</div>
  <div class="userprofile-bio">
    <h4>My bio:</h4>
    <%=  @profile.bio %>
  </div>

  <div class="userprofile-motivation">
    <h4>My motivation:</h4>
    <%=  @profile.motivation %>
  </div>

  <div class="userprofile-button">
    <% if  @friend_request %>
      <h4>Friend request pending</h4>
    <% else %>
      <%= link_to(new_profile_friend_request_path(@profile), class: "btn btn-primary")  do %>
      <h4>Contact <%= @profile.first_name %></h4>
      <% end %>
    <% end %>
  </div>

</div>

