  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="friend-request-form">
      <h2 class="form-headline"><%= " Write a nice message for #{@profile.first_name
}" %> </h2>
      <%= simple_form_for [@profile, @friend_request], url: profile_friend_requests_path(@profile)  do |f| %>
