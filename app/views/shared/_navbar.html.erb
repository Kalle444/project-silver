<div class="navbar-silver">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-silver-link" do %>
    <%= "Amikeco" %>
  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-silver-right hidden-md-down">

    <% if user_signed_in? %>
      <!-- Links when logged in -->
      <ul class="navbar-nav ml-auto">

        <!-- Dropdown on Avatar -->
        <li class="nav-item dropdown">

          <!-- User Avatar / needs to be fixed-->
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

            <%= link_to dashboard_path(current_user), class: "dropdown-item" do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>

            <div class="dropdown-divider"></div>

            <%= link_to destroy_user_session_path, class: "dropdown-item", method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>

          </div>
        </li>

      </ul>
      <%= link_to "Home", root_path, class: "navbar-silver-item navbar-silver-link" %>
      <%= link_to "Search profiles", profiles_path, class: "navbar-silver-item navbar-silver-link" %>
      <%= link_to "Help", "#", class: "navbar-silver-item navbar-silver-link" %>
      <%= link_to "#{current_user.first_name} #{current_user.last_name}", "#" , class: "navbar-silver-item navbar-silver-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-silver-item">
        <div class="dropdown">
          <% avatar_url = current_user.profile_picture || "user_icon.png" %>
          <%= cl_image_tag current_user.profile_picture.path,
           class: "avatar dropdown-toggle", id: "navbar-silver-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-silver-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-server"></i> <%= t(".profile", default: "Dashboard") %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-silver-item navbar-silver-link" %>
      <%= link_to t(".sign_in", default: "Sign up"), new_user_registration_path, class: "navbar-silver-item navbar-silver-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
