<div class="navbar-silver">
  <!-- Logo -->
  <%= link_to root_path, class: "" do %>
    <%= image_tag("amikeco-logo6.png", class: "avatar-logo") %>
  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-silver-right hidden-xs hidden-sm">

    <% if user_signed_in? %>
      <%= link_to "Home", root_path, class: "navbar-silver-item navbar-silver-link
       #{active_class(root_path)}" %>

      <%= link_to "Find friends", profiles_path, class: "navbar-silver-item navbar-silver-link #{active_class(profiles_path)}" %>

      <%= link_to "Help", "", class: "navbar-silver-item navbar-silver-link" %>

      <%= link_to "My profile", dashboards_path, class: "navbar-silver-item navbar-silver-link #{active_class(dashboards_path)}" %>

      <%= link_to "log out", destroy_user_session_path, method: :delete, class: "navbar-silver-item navbar-silver-link" %>

        <div class="navbar-silver-item">

          <div class="dropdown">
            <% if current_user.profile_picture %>
                <% avatar_url = current_user.profile_picture.path %>
            <% else %>
                <% avatar_url = "face_dsncrt.jpg"  %>
            <% end %>
            <%= cl_image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-silver-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-right navbar-silver-dropdown-menu", >
              <li>
                <%= link_to dashboards_path do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                <% end %>
              </li>

              <li>
                <%= link_to root_path do %>
                  <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
          <% else %>
            <!-- Login link (when logged out) -->
            <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-silver-item navbar-silver-link" %>
            <%= link_to t(".sign_in", default: "Sign up"), new_user_registration_path, class: "navbar-silver-item navbar-silver-link" %>
          <% end %>
        </div>
        <!-- Dropdown list appearing on mobile only -->
        <div class="navbar-silver-item hidden-md hidden-lg">
          <div class="dropdown">
            <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
            <ul class="dropdown-menu dropdown-menu-right navbar-silver-dropdown-menu">

              <li><%= link_to "Dashboard", dashboards_path %></li>
              <li><%= link_to "Search profiles", profiles_path %></li>
            </ul>
          </div>
        </div>
      </div>
